<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainPage">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/clash_status"
        style="@style/DefaultCard"
        android:layout_marginTop="18dp">

        <LinearLayout
            style="@style/Default"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/clash_status_icon"
                style="@style/DefaultCardImage" />

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/Default"
                android:paddingVertical="25dp">

                <TextView
                    android:id="@+id/clash_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/resources_status_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@android:color/white"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="11sp"
                    android:maxLines="2"
                    android:visibility="invisible"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/clash_status_text"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_ip_check"
        style="@style/DefaultCard"
        app:cardElevation="0dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/Default"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/DefaultCardImage"
                android:src="@drawable/ic_detection" />

            <TextView
                style="@style/DefaultCardText"
                android:text="@string/title_ip_check"
                android:textAppearance="?attr/textAppearanceHeadline6" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_speed_test"
        style="@style/DefaultCard"
        app:cardElevation="0dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/Default"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/DefaultCardImage"
                android:src="@drawable/ic_speed" />

            <TextView style="@style/DefaultCardText"
                android:text="@string/title_speed_test"
                android:textAppearance="?attr/textAppearanceHeadline6" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
</androidx.appcompat.widget.LinearLayoutCompat>